FROM python:3.11-slim

# -------------------------------------------------------
# Layout:
#   /rootapp/          ← root app modules (llm, ingest, etc.)
#   /rootapp/demo_data ← sales data files
#   /rootapp/services/ ← confidence scoring
#   /backend/          ← FastAPI backend (app/ package)
# -------------------------------------------------------

# Install system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install ALL Python deps (root + backend)
COPY requirements.txt /tmp/root-req.txt
COPY fulcrum-llm-ops/backend/requirements.txt /tmp/backend-req.txt
RUN pip install --no-cache-dir -r /tmp/root-req.txt -r /tmp/backend-req.txt

# Copy root app modules to /rootapp (llm.py, ingest.py, retrieve.py, etc.)
COPY app/ /rootapp/
COPY demo_data/ /rootapp/demo_data/
COPY .env.example /rootapp/.env

# Copy backend to /backend
COPY fulcrum-llm-ops/backend/ /backend/

# Create mlruns directory
RUN mkdir -p /data/mlruns /rootapp/mlruns

# Expose API port
EXPOSE 8000

# PYTHONPATH: /rootapp so "import llm", "import ingest" etc. resolve
# No /project to avoid app/ namespace collision with backend's app/ package
ENV PYTHONPATH=/rootapp

# Run backend from /backend directory
WORKDIR /backend
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
